{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "right",
            "overflow": "hide",
            "segments": [
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#899CA1",
                    "properties": {
                        "branch_icon": "",
                        "fetch_status": true,
                        "display_status": true,
                        "display_stash_count": true,
                        "display_upstream_icon": true
                    },
                    "template": "<#005faf>⟮</><#6C7E96>{{ if .Data.HEAD }}<b>{{ .Data.HEAD }}</b>{{ end }}{{ if gt .Data.Ahead 0 }}<#367CB0>←{{ .Data.Ahead }}</>{{ end }}{{ if gt .Data.Behind 0 }}<#367CB0>→{{ .Data.Behind }}</>{{ end }}{{ if and .Data.Working (gt .Data.Working.Changed 0) }} <#914E89>●W{{ .Data.Working.String }}</>{{ end }}{{ if and .Data.Staging (gt .Data.Staging.Changed 0) }} <#5E468C>●S{{ .Data.Staging.String }}</>{{ end }}<#005faf>⟯</>"
                },
                {
                    "type": "executiontime",
                    "style": "powerline",
                    "foreground": "#45bf17",
                    "template": " {{ .FormattedMs }}s <#899CA1>\ue601</>",
                    "properties": {
                        "threshold": 50,
                        "style": "dallas"
                    }
                },
                {
                    "foreground": "#899CA1",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#ce162b{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": false
                    },
                    "style": "plain",
                    "template": " ×{{.Code}}",
                    "type": "status"
                }
            ],
            "type": "rprompt"
        },
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#005faf",
                    "properties": {
                        "linux": "<#005faf>\ue27f</>",
                        "macos": "<#005faf>\ue27f</>",
                        "windows": "<#005faf>\ue27f</>"
                    },
                    "style": "plain",
                    "template": "{{ if false }}{{ if .WSL }}WSL at {{ end }} {{.Icon}} {{ end }}",
                    "type": "os"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#005faf",
                    "template": " "
                },
                {
                    "foreground": "#ce162b",
                    "powerline_symbol": "\ue0b0",
                    "style": "plain",
                    "template": "\uf0e7 ",
                    "type": "root"
                },
                {
                    "foreground": "#395573",
                    "properties": {
                        "folder_separator_icon": "/",
                        "max_width": 40,
                        "home_icon": "<#005faf>~</>",
                        "truncation_symbol": "…",
                        "cycle": [
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1"
                        ]
                    },
                    "template": "{{ .Path }}",
                    "enable_hyperlink": true,
                    "show_git_root": true,
                    "type": "path"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#005faf",
                    "template": " ❯>"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}